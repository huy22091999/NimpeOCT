<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.globits.nimpe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NimpeApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_lancher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nimpe"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".ui.security.AcceptActivity"
            android:theme="@style/Theme.Nimpe.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.medical.MedicalActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ui.security.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Nimpe.NoActionBar"></activity>
        <activity
            android:name=".ui.security.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Nimpe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nimpe.NoActionBar"></activity>
    </application>

</manifest>